{
    "name": "",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nodemon src --ext ts,json --exec cross-env IS_TS_NODE=true ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon --watch src --ext ts,json --exec cross-env IS_TS_NODE=true ts-node -r tsconfig-paths/register src/main.ts",
        "start:debug": "nodemon --watch src --ext ts,json --exec cross-env DEBUG=app:* cross-env IS_TS_NODE=true ts-node -r tsconfig-paths/register src/main.ts",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs}/**/*.+(js|json|ts|tsx)\" --fix",
        "test": "jest --verbose",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.mjs --verbose",
        "postinstall": "husky install",
        "pre-commit": "lint-staged && npm test",
        "docker": "docker compose up -d",
        "typeorm": "cross-env IS_TS_NODE=true ts-node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "typeorm:ds": "yarn typeorm -d ./src/modules/database/datasource.ts",
        "typeorm:create": "yarn typeorm migration:create",
        "typeorm:generate": "yarn typeorm:ds migration:generate",
        "typeorm:revert": "yarn typeorm:ds migration:revert",
        "typeorm:run": "yarn typeorm:ds migration:run",
        "typeorm:show": "yarn typeorm:ds migration:show"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/mapped-types": "^1.2.0",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/platform-fastify": "^9.0.3",
        "@nestjs/typeorm": "^9.0.1",
        "@types/jsonwebtoken": "^8.5.8",
        "axios": "^0.27.2",
        "cache-manager": "^4.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "crypto-js": "^4.1.1",
        "debug": "^4.3.4",
        "dotenv": "^16.0.3",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "module-alias": "^2.2.2",
        "pg": "^8.8.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "typeorm": "^0.3.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/cache-manager": "^4.0.1",
        "@types/crypto-js": "^4.1.1",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.4",
        "@types/lodash": "^4.14.182",
        "@types/minimist": "^1.2.2",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "commitizen": "^4.2.6",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.1",
        "git-commit-msg-linter": "^4.1.3",
        "husky": "^8.0.0",
        "jest": "^29.4.0",
        "lint-staged": "^13.0.3",
        "nodemon": "^2.0.20",
        "source-map-support": "^0.5.20",
        "sqlite3": "^5.0.11",
        "supertest": "^6.1.3",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.1",
        "typescript": "^4.7.4"
    },
    "_moduleAliases": {
        "@": "./dist",
        "@modules": "./dist/modules",
        "@common": "./dist/modules/common",
        "@app": "./dist/modules/app",
        "@config": "./dist/config",
        "@database": "./dist/modules/database",
        "@auth": "./dist/modules/auth"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
